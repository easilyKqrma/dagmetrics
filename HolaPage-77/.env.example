# ================================
# HOLAPAGE-77 ENVIRONMENT VARIABLES
# ================================
# Copy this file to .env and fill in your actual values

# ===================
# DATABASE CONFIGURATION
# ===================
# PostgreSQL database connection string
# Get this from your Neon, Supabase, or other PostgreSQL provider
DATABASE_URL=postgresql://username:password@host:port/database_name

# ===================
# AUTHENTICATION & SECURITY
# ===================
# JWT Secret for token signing - MUST be a strong, random string
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-to-something-random

# Session secret for Express sessions
# Generate with: openssl rand -base64 32
SESSION_SECRET=your-session-secret-key-change-this-too

# ===================
# PAYPAL INTEGRATION
# ===================
# PayPal Client ID and Secret
# Get these from https://developer.paypal.com/
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# ===================
# APPLICATION SETTINGS
# ===================
# Application port (default: 5000)
PORT=5000

# Node environment (development/production)
NODE_ENV=development

# ===================
# OPTIONAL REPLIT SETTINGS
# ===================
# These are automatically set by Replit
# REPL_ID=your-repl-id
# REPLIT_DEPLOYMENT=0